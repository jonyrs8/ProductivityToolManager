<UserControl x:Class="UserInterface.ChartsUC.PieChartsUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UserInterface.ChartsUC"
             mc:Ignorable="d" 
             d:DesignHeight="350" d:DesignWidth="400"
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <ComboBox x:Name="Filter" Height="20" IsEnabled="True" Width="100"
                  SelectionChanged="ViewType_SelectionChanged"
                  VerticalAlignment="Center" HorizontalContentAlignment="Center"
                  HorizontalAlignment="Center">
        </ComboBox>

        <lvc:PieChart x:Name="ChartUC"
            LegendLocation="Bottom" DataClick="Chart_OnDataClick" Hoverable="False" DataTooltip="{x:Null}"
                      Height="250" Width="400" VerticalAlignment="Center" FontSize="9.5"
                      Grid.Row="2" Grid.RowSpan="4" HorizontalAlignment="Center"
                      Margin="0 0 0 50">
        </lvc:PieChart>
    </Grid>
</UserControl>